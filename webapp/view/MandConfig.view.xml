<mvc:View controllerName="serNow.conect.alert.controller.MandConfig" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" displayBlock="true"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="true" class="initialPage" title="Mandatory Configuration">
		<customHeader>
			<Bar class="headerBar">
				<contentLeft>
					<Image src="images/corealm-logo-2019.png" width="8rem"/>
				</contentLeft>
				<contentMiddle>
					<Text text="Settings" class="font-lg"/>
				</contentMiddle>
				<contentRight>
					<HBox>
						<Button text="{parts: [ 'loginModel>/First', 'loginModel>/Last' ],formatter: '.userList'}"
							tooltip="{loginModel>/name}" id="userLogin" type="Transparent" press="onUserNamePress"
							class="sapUiTinyMarginEnd sapUiTinyMarginBegin username"></Button>
						<Label id="userId" text="{loginModel>/PARTNER}" visible="false"></Label>
					</HBox>
				</contentRight>
			</Bar>
		</customHeader>
		<content >
			<VBox class="textClassVBox sapUiSizeCompact">
				<Text text="You need to perform the Mandatory Configuration Steps before using the ServiceNow connector for Alert integration."/>
				<Text text="Please follow the below configuration steps in order as per instructions provided."/>
				<Text
					text="Any incomplete step may result in functionality issues with the ServiceNow connector. So please ensure that all steps are performed without error."/>
			</VBox>
			<HBox justifyContent="SpaceAround" class="genericTileHBox sapUiSizeCompact">
				<GenericTile id="prereq" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout prereq" header="1. System Preparation"
					frameType="OneByOne" press="onTilePress" headerImage="sap-icon://laptop">
					<tileContent>
						<TileContent>
							<content>
								<Text text="Check system preparation in SAP Solution manager and ServiceNow"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
				<GenericTile id="connectivity" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout connectivity" header="2. Connector Integration"
					frameType="OneByOne" press="onTilePress" headerImage="sap-icon://disconnected">
					<tileContent>
						<TileContent>
							<content>
								<Text text="Check connection between SAP Solution manager and ServiceNow"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
				<GenericTile id="mapping" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout mapping" header="3. Assignment Routing"
					frameType="OneByOne" press="onTilePress" headerImage="sap-icon://overview-chart">
					<tileContent>
						<TileContent>
							<content>
								<Text text="Map ServiceNow request to SAP Solution manager change document"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
				<GenericTile id="alert" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout error" header="4. Alert Routing"
					frameType="OneByOne" press="onTilePress" headerImage="sap-icon://status-error">
					<tileContent>
						<TileContent>
							<content>
								<Text text="Map ServiceNow request to SAP Solution manager change document"/>
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
			</HBox>
		</content>
	</Page>
</mvc:View>