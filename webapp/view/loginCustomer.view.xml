<mvc:View controllerName="serNow.conect.alert.controller.loginCustomer" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" displayBlock="true"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false" class="initialPage" title="Mandatory Configuration">
		<content>
			<VBox class="sapUiLargeMargin">
		<HBox alignItems="Start" justifyContent="Center">
			<Image src="images/corealm-logo-2019.png" width="8rem"/>
			</HBox>
		<f:Form>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="3"
					labelSpanL="3"
					labelSpanM="3"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="3"
					emptySpanL="3"
					emptySpanM="3"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="">
							<f:fields>
								<Input placeholder="Mob No / Machine No / Customer Code" id="name"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="">
							<f:fields>
								<Input type="Password" placeholder="Password" id="pwd"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="">
							<f:fields>
			<Button icon="sap-icon://visits" type="Emphasized" text="Login" press="onPress" />
			</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<HBox alignItems="Start" justifyContent="Center">
			<Link
				text="Login via OTP"
				target="_blank"
				href="http://" />
			</HBox>
			<HBox alignItems="Start" justifyContent="Center">
			<Text renderWhitespace="true" text="Are you a first time user? "/>
			<Link
				text="Sign In"
				target="_blank"
				href="http://" />
			</HBox>
	</VBox>
		</content>
	</Page>
</mvc:View>